<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" styleClass="root-container" stylesheets="@LogDisplay.css"
      xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.glencoesoftware.convert.dialogs.LogDisplayDialog">
    <HBox fx:id="topPane" alignment="CENTER">
        <Region layoutX="11.0" layoutY="10.0" prefWidth="32.0" HBox.hgrow="NEVER"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label pickOnBounds="false" styleClass="header" text="Execution Logs">
            <VBox.margin>
                <Insets bottom="5.0" top="5.0"/>
            </VBox.margin>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Button contentDisplay="GRAPHIC_ONLY" maxHeight="32.0" maxWidth="32.0" mnemonicParsing="false"
                onAction="#closeLogs" prefHeight="32.0" prefWidth="32.0" styleClass="close-button">
            <graphic>
                <FontIcon iconColor="black" iconLiteral="bi-x" iconSize="30" styleClass="close-icon"/>
            </graphic>
        </Button>
    </HBox>
    <Label fx:id="title" pickOnBounds="false" text="Logs">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="5.0" top="5.0"/>
        </VBox.margin>
    </Label>
    <TextArea fx:id="logBox" editable="false" pickOnBounds="false" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="5.0" left="20.0" right="20.0" top="2.0"/>
        </VBox.margin>
        <font>
            <Font name="Courier New" size="12.0"/>
        </font>
    </TextArea>
    <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
        <VBox.margin>
            <Insets bottom="5.0"/>
        </VBox.margin>
        <Region prefWidth="20.0" HBox.hgrow="NEVER">
            <HBox.margin>
                <Insets left="5.0"/>
            </HBox.margin>
        </Region>
        <Region HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" onAction="#copyLogs" styleClass="minor-button" text="Copy To Clipboard"/>
        <Button mnemonicParsing="false" onAction="#clearLogs" styleClass="minor-button" text="Clear"/>
        <Region HBox.hgrow="ALWAYS"/>
        <FontIcon fx:id="resizeIcon" iconLiteral="bi-arrows-angle-expand" iconSize="16" rotate="90">
            <HBox.margin>
                <Insets right="5.0"/>
            </HBox.margin>
        </FontIcon>
    </HBox>

</VBox>
