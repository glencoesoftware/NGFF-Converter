<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="250.0" prefWidth="400.0" styleClass="updateDialog" stylesheets="@UpdateDialog.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.glencoesoftware.convert.dialogs.UpdateDialog">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <Label maxWidth="1.7976931348623157E308" styleClass="mainLabel" text="NGFF-Converter Updates" HBox.hgrow="ALWAYS" />
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <Button defaultButton="true" mnemonicParsing="false" onAction="#onClose" prefHeight="32.0" styleClass="major-button" text="Close">
            <padding>
               <Insets left="12.0" right="12.0" />
            </padding></Button>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <center>
      <VBox spacing="5.0">
         <VBox fx:id="container" alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS" />
         <CheckBox fx:id="shouldCheckForUpdates" mnemonicParsing="false" text="Check for updates automatically" />
         <Label fx:id="finalLabel" text="(You can check for updates manually using the Help menu)" />
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
